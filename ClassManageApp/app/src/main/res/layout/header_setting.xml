<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="180dp"
    android:background="@color/setting_back_header_blue">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@mipmap/settingheadback" />
    </FrameLayout>

    <TextView
        android:id="@+id/current_semester_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:paddingLeft="20dp"
        android:paddingTop="20dp"
        android:paddingRight="20dp"
        android:paddingBottom="70dp"
        android:text="@string/setting_current_semester_title"
        android:textColor="@color/blue_text_color"
        android:textSize="25sp" />

    <TextView
        android:id="@+id/current_week_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:padding="20dp"
        android:text="@string/setting_current_week_title"
        android:textColor="@color/blue_text_color"
        android:textSize="25sp" />

</RelativeLayout>
